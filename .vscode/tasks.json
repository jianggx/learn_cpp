{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "raw build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "cpp11.cpp",
                "-g",
                "-std=c++11",
                "-o",
                "cpp11"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            } 
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": ["-G", "'Unix Makefiles'", "-DCMAKE_BUILD_TYPE=Debug", ".."]     
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "args": ["-j", "8"],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": "build" 
        },
    ]
}